<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#708090"
    tools:context=".ui.slideshow.SlideshowFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="337dp"
        android:layout_height="49dp"
        android:layout_marginBottom="572dp"
        android:gravity="center"
        android:text="What's 'Who's The Baller'?"
        android:textColor="#39454a"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="336dp"
        android:layout_height="172dp"
        android:layout_marginBottom="388dp"
        android:text="'Who's The Baller' is a game for all the football fans. In this game the players have to type the football players name, which is displayed on the screen. The aim of the game is to type as many players in a short time as possible."
        android:textColor="#39454a"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="337dp"
        android:layout_height="49dp"
        android:layout_marginBottom="308dp"
        android:gravity="center"
        android:text="How to play?"
        android:textColor="#39454a"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="347dp"
        android:layout_height="190dp"
        android:layout_marginBottom="88dp"
        android:text="A Name of the player is shown on the screen. Type the name of the footballers name in the bar as fast a you can while the Timer is running. If you guessed the correct name you continue to the next player. If the name was typed wrong you have to start from 0."
        android:textColor="#39454a"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>